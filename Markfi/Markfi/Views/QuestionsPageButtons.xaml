<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:Markfi.ViewModels"
             x:Class="Markfi.Views.QuestionsPageButtons">
    <ContentPage.BindingContext>
        <ViewModels:QuestionsPageViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Label x:Name="Question"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                FontSize="Large"
                Grid.Row="0"/>
            <Grid Margin="20" Grid.Row="1">
                <Button x:Name="Option1"
                    Grid.Column="0"
                    Grid.Row="0"/>
                <Button x:Name="Option2"
                    Grid.Column="1"
                    Grid.Row="0"/>
                <Button x:Name="Option3"
                    Grid.Column="0"
                    Grid.Row="1"/>
                <Button x:Name="Option4"
                    Grid.Column="1"
                    Grid.Row="1"/>
            </Grid>
            <Label Text="" Grid.Row="2" Grid.RowSpan="1"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>