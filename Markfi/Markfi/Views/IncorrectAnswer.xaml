<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Markfi.Views.IncorrectAnswer">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#e9190f">
            <Label Text="Incorrect!"
                VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
                TextColor="WhiteSmoke" FontAttributes="Bold"
                FontSize="Header"
                />
            <Label x:Name="Message"
                VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
                TextColor="WhiteSmoke" HorizontalTextAlignment="Center"
                FontSize="28" FontAttributes="Italic"
                Margin="20"/>
            <Button Text="Continue"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="#a2120a"
                FontSize="20"
                Margin="20"
                Clicked="OnClick"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>