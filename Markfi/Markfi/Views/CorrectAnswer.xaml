<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Markfi.Views.CorrectAnswer">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#609040">
            <Label Text="Correct!"
                VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
                TextColor="WhiteSmoke"
                FontSize="85"/>
            <Label x:Name="CorrectMessage"
                VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
                TextColor="WhiteSmoke" HorizontalTextAlignment="Center"
                FontSize="Medium"/>
            <Button Text="Continue"
                VerticalOptions="CenterAndExpand"
                 BackgroundColor="#306010"
                 Clicked="OnClick"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>